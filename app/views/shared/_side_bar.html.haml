.side-bar
  .side-bar__top
    .side-bar__top__header
      %p.side-bar__top__header__user-name 
        = current_user.name
      %ul.side-bar__top__header__icons
        %li.side-bar__top__header__icons__edit-icon
          =link_to new_group_path  do
            =icon('fa', 'edit')
        %li.side-bar__top__header__icons__cog-icon
          =link_to edit_user_path(current_user) do
            =icon('fa', 'cog')
  .side-bar__under         
    - current_user.groups.each do |group|
      .side-bar__under__group--lists
        .side-bar__under__group--lists__group--list
          = link_to group_messages_path(group) do
            .side-bar__under__group--lists__group--list__group--name
              = group.name
            .side-bar__under__group--lists__group--list__group--message
              = group.show_last_message